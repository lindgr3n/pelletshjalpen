{
  "env": {
      "browser": true,
      "node": true,
      "es6": true,
      "jest": true
  },
  "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2017,
      "ecmaFeatures": {
          "jsx": true
      }
  },
  
  "extends": ["eslint:recommended", "prettier", "plugin:react/recommended"],

  "rules": {
      "semi": ["error", "always"],
      "quotes": ["error", "single"],
      "curly": "error",
      "no-unused-vars": ["error", {"args": "none"}],
      "no-console": "warn",
      "max-len": "off",

      "prettier/prettier": ["error", {
          "singleQuote": true,
          "printWidth": 200
      }]
  },
  "plugins": [
      "prettier", "react"
  ]
}